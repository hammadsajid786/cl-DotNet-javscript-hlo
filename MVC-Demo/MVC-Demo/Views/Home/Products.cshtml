@model MVC_Demo.Models.Product

@{
    /**/

    ViewBag.Title = "Products";
}

<h2>Products</h2>
<div class="h-100 justify-content-center align-items-center">


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            <div class="form-group">
                <div class="col-md-4">
                    @Html.EditorFor(model => model.product_name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Product Name" } })
                    @Html.ValidationMessageFor(model => model.product_name, "", new { @class = "text-danger" })
                    @Html.ValidationMessage("x", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    @Html.EditorFor(model => model.prodyct_brand, new { htmlAttributes = new { @class = "form-control", @placeholder = "Brand" } })
                    @Html.ValidationMessageFor(model => model.prodyct_brand, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-3">
                    <input type="submit" value="Save" class="btn btn-primary" style="margin-left:220px;" />
                </div>
            </div>

            @if (ViewBag.sucMessage != null)
            {
                <div class="form-group">
                    <div class="col-md-12">
                        <span style="color:green;">*@ViewBag.sucMessage</span>
                    </div>
                </div>
            }
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        </div>
    }

    <br />
    <br />

    @if (ViewBag.products != null)
    {
        <div id="ProductsList">
            <table class="table col-10">
                <thead style="background-color:lightgray;">
                    <tr>
                        <th scope="col">Select</th>
                        <th scope="col">Product Name</th>
                        <th scope="col">Brand</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (MVC_Demo.Models.Product item in ViewBag.products)
                    {
                        <tr>
                            <th scope="row">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id=@("defaultUnchecked"+item.product_id)>
                                    <label class="custom-control-label" for=@("defaultUnchecked"+item.product_id)></label>
                                </div>
                            </th>
                            <td>@item.product_name</td>
                            <td>@item.prodyct_brand</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>