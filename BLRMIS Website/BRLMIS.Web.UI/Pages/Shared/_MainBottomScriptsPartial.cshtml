<script>

    $(function () {

        $(".navbar-nav a").each(function () {

            if(!$(".navbar-nav a").hasClass('active'))
            {
                var path = $(this).attr('href') == '' ? "/" : $(this).attr('href');

                var arrPathName = window.location.pathname.split('/');
                var arrMenuPathName = path.split('/');
                var lastIndex = arrPathName.length - 1;

                if ((arrPathName[lastIndex].trim() == "" || arrPathName[lastIndex].trim().toLowerCase() == "index") &&
                    (path.trim() == "/" || path.trim() == "")) {

                    $(this).addClass("active");
                }
                else {

                    for (var i = 0; i < arrPathName.length; i++) {

                        if (arrMenuPathName.findIndex(x => x.trim() != "" && x.trim().toLowerCase() == arrPathName[lastIndex].trim().toLowerCase()) > -1) {

                            $(this).addClass('active');
                            break;
                        }
                        else if (arrPathName.findIndex(x => x.trim() != "" && $(this).hasClass(x.trim().toLowerCase())) > -1) {

                            $(this).addClass('active');
                            break;
                        }
                    }
                }
            }
        });

        $(".dw-faqs a").each(function () {

            if ((window.location.pathname.indexOf($(this).attr('href') == '' ? "/a" : $(this).attr('href'))) > -1) {
                $(this).addClass('active');
            }

        });


        $(".footer-link li a").each(function () {

            if ((window.location.pathname.indexOf($(this).attr('href') == '' ? "/a" : $(this).attr('href'))) > -1) {
                $(this).addClass('active');
            }

        });

    });

    $lib.init({ apiBaseUrl: '@ViewBag.apiBaseUrl', appSettings: '@ViewBag.appSettings' });
</script>
