@page "/PropertyRegistry"
@{
    ViewData["Title"] = "Property Registry";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="faqs innerpage pro-reg-page">
    <div class="banner-home about-page">
        <div class="banner about-banner ">
            <div class="container">
                <div class="row align-items-md-center">
                    <div class="col-md-12">
                        <div class="banner-detail">
                            <h1 class="heading">
                                Property Registry
                            </h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container mt50 mb30">
        <div class="hd-holder">
            <h6>Property Registration Procedure</h6>
            <span class="bd-line"></span>
        </div>
        <p class="des-text">This process requires <span class="green2">11 days to complete</span></p>
        <div id="accordion" class="mb30">
            <div class="card">
                <span class="step-count active">1</span>
                <div class="card-header" id="headingOne">
                    <div class="mb-0">
                        <div class="btn btn-link collapsed" data-toggle="collapse" data-parent="#collapseOne" data-target="#collapseOne" aria-controls="collapseOne">
                            <h5>Fard Issuance</h5>
                            <p>Obtain Fard from Arazi Record Center</p>
                            <div class="row">
                                <ul class="step-detail col-md-10">
                                    <li>
                                        <p>Charges: 500 Rs.</p>
                                    </li>
                                    <li>
                                        <p>Time Require: 1 Days</p>
                                    </li>
                                </ul>
                                <div class="proc-text col-md-2">
                                    <span class="show pull-right">Show Procedure</span>
                                    <span class="hide pull-right">Hide Procedure</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div id="collapseOne" class="collapse">
                    <div class="card-body">
                        <ul class="steps-list row d-flex">
                            <li class="col-sm-3">
                                <div class="list-data clearfix">
                                    <img src="images/property-registration/nadra-icon.png" alt="Nadra" />
                                    <div class="title-desc">
                                        <h5>STEP 01</h5>
                                        <p>NADRA Verification</p>
                                    </div>
                                </div>
                            </li>
                            <li class="col-sm-3">
                                <div class="list-data clearfix">
                                    <img src="images/property-registration/land-record-ico.png" alt="Nadra" />
                                    <div class="title-desc">
                                        <h5>STEP 02</h5>
                                        <p>
                                            Identification of Land  & Rights
                                            Holder in Record
                                        </p>
                                    </div>
                                </div>
                            </li>
                            <li class="col-sm-3">
                                <div class="list-data clearfix">
                                    <img src="images/property-registration/fee-challan-icon.png" alt="Nadra" />
                                    <div class="title-desc">
                                        <h5>STEP 03</h5>
                                        <p>Get Fee Challan</p>
                                    </div>
                                </div>
                            </li>
                            <li class="col-sm-3">
                                <div class="list-data clearfix">
                                    <img src="images/property-registration/deposit-fee-icon.png" alt="Nadra" />
                                    <div class="title-desc">
                                        <h5>STEP 04</h5>
                                        <p>Deposit Fee</p>
                                    </div>
                                </div>
                            </li>
                            <li class="col-sm-3 ml-auto ">
                                <div class="list-data clearfix">
                                    <img src="images/property-registration/fard-received-icon.png" alt="Nadra" />
                                    <div class="title-desc">
                                        <h5>STEP 05</h5>
                                        <p>Fard Received</p>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>


            <div class="card">
                <span class="step-count">2</span>
                <div class="card-header" id="headingTwo">
                    <div class="mb-0">
                        <div class="btn btn-link collapsed" data-toggle="collapse" data-parent="#collapseTwo" data-target="#collapseTwo" aria-controls="collapseTwo">
                            <h5>Free Payment</h5>
                            <p>Payment of the Stamp Duty Capital Value Tax and Registration Fee at Bank of Punjab Only</p>
                            <div class="row">
                                <ul class="step-detail col-md-10">
                                    <li>
                                        <p>Town Fee: 1%</p>
                                    </li>
                                    <li>
                                        <p>CVT: 2%</p>
                                    </li>
                                    <li>
                                        <p>Stamp Duty: 3%</p>
                                    </li>
                                    <li>
                                        <p>Time Require: 1 Day</p>
                                    </li>
                                </ul>
                                <div class="proc-text col-md-2">
                                    <span class="show pull-right">Show Procedure</span>
                                    <span class="hide pull-right">Hide Procedure</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="collapseTwo" class="collapse">
                    <div class="card-body">
                        <ul class="steps-list row d-flex">
                            <li class="col-sm-3">
                                <div class="list-data clearfix">
                                    <img src="images/property-registration/get-challan-icon.png" alt="Nadra" />
                                    <div class="title-desc">
                                        <h5>STEP 01</h5>
                                        <p>Get Challan From Website</p>
                                    </div>
                                </div>
                            </li>
                            <li class="col-sm-3">
                                <div class="list-data clearfix">
                                    <img src="images/property-registration/bank-icon.png" alt="Nadra" />
                                    <div class="title-desc">
                                        <h5>STEP 02</h5>
                                        <p>Visit any Branch of Bank</p>
                                    </div>
                                </div>
                            </li>
                            <li class="col-sm-3">
                                <div class="list-data clearfix">
                                    <img src="images/property-registration/payment-challan-icon.png" alt="Nadra" />
                                    <div class="title-desc">
                                        <h5>STEP 03</h5>
                                        <p>Pay Challan</p>
                                    </div>
                                </div>
                            </li>
                            <li class="col-sm-3">
                                <div class="list-data clearfix">
                                    <img src="images/property-registration/receipt-icon.png" alt="Nadra" />
                                    <div class="title-desc">
                                        <h5>STEP 04</h5>
                                        <p>Receipt of Stamp Paper</p>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div class="card">
                <span class="step-count">3</span>
                <div class="card-header" id="headingThree">
                    <div class="mb-0">
                        <div class="btn btn-link collapsed" data-toggle="collapse" data-parent="#collapseThree" data-target="#collapseThree" aria-controls="collapseThree">
                            <h5>Hire</h5>
                            <p>Hire the Deed Writer or Lawyer by the Customer</p>
                            <div class="row">
                                <ul class="step-detail col-md-10">
                                    <li>
                                        <p>* Charges</p>
                                    </li>
                                    <li>
                                        <p>Time Require: 1 Days</p>
                                    </li>
                                </ul>
                                <div class="proc-text col-md-2">
                                    <span class="show pull-right">Show Procedure</span>
                                    <span class="hide pull-right">Hide Procedure</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="collapseThree" class="collapse">
                    <div class="card-body">
                        <div class="text-center hire-data">
                            <h4>Hire the Deed Writer or Lawyer</h4>
                            <p class="green mb-0">Hire the Deed Writer or Lawyer by the Customer</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <span class="step-count">4</span>
                <div class="card-header" id="headingFour">
                    <div class="mb-0">
                        <div class="btn btn-link collapsed" data-toggle="collapse" data-parent="#collapseFour" data-target="#collapseFour" aria-controls="collapseFour">
                            <h5>Registration</h5>
                            <p>Execution & Registration of a Deed Before Registration Authority & Mutation in Revenue Record at Sub Registrar Office</p>
                            <div class="row">
                                <ul class="step-detail col-md-10">
                                    <li>
                                        <p>Charges: 1000 Rs.</p>
                                    </li>
                                    <li>
                                        <p>Time Require: 8 Days</p>
                                    </li>
                                </ul>
                                <div class="proc-text col-md-2">
                                    <span class="show pull-right">Show Procedure</span>
                                    <span class="hide pull-right">Hide Procedure</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="collapseFour" class="collapse">
                    <div class="card-body">
                        <ul class="steps-list row d-flex">
                            <li class="col-sm-3">
                                <div class="list-data clearfix">
                                    <img src="images/property-registration/submissionofdoc-icon.png" alt="Nadra" />
                                    <div class="title-desc">
                                        <h5>STEP 01</h5>
                                        <p>
                                            Submission of  Documents at
                                            Sub-Registrar Office
                                        </p>
                                    </div>
                                </div>
                            </li>
                            <li class="col-sm-3">
                                <div class="list-data clearfix">
                                    <img src="images/property-registration/stamp-paper-issued-icon.png" alt="Nadra" />
                                    <div class="title-desc">
                                        <h5>STEP 02</h5>
                                        <p>
                                            Online Verfication of Receipt
                                            of Stamp Paper and Fee
                                        </p>
                                    </div>
                                </div>
                            </li>
                            <li class="col-sm-3">
                                <div class="list-data clearfix">
                                    <img src="images/property-registration/data-protection-icon.png" alt="Nadra" />
                                    <div class="title-desc">
                                        <h5>STEP 03</h5>
                                        <p>Online Verification of Fard</p>
                                    </div>
                                </div>
                            </li>
                            <li class="col-sm-3">
                                <div class="list-data clearfix">
                                    <img src="images/property-registration/barcode-icon.png" alt="Electronic Capturing
                        of Deed Details" />
                                    <div class="title-desc">
                                        <h5>STEP 04</h5>
                                        <p>
                                            Electronic Capturing
                                            of Deed Details
                                        </p>
                                    </div>
                                </div>
                            </li>
                            <li class="col-sm-3 ml-auto"></li>
                            <li class="col-sm-3 ml-auto">
                                <div class="list-data clearfix">
                                    <img src="images/property-registration/stamp-icon.png" alt="Approval of Registry
                        by Sub-Registrar" />
                                    <div class="title-desc">
                                        <h5>STEP 07</h5>
                                        <p>
                                            Automatic Attestation
                                            of Mutation by Assistant
                                            Director Land Record
                                        </p>
                                    </div>
                                </div>
                            </li>
                            <li class="col-sm-3 ml-auto">
                                <div class="list-data clearfix">
                                    <img src="images/property-registration/scanner-icon.png" alt="Approval of Registry
                        by Sub-Registrar" />
                                    <div class="title-desc">
                                        <h5>STEP 06</h5>
                                        <p>
                                            Scanning of Passed Registry
                                            & Online Transmission to
                                            Arazi Record Center
                                        </p>
                                    </div>
                                </div>
                            </li>
                            <li class="col-sm-3 ml-auto">
                                <div class="list-data clearfix">
                                    <img src="images/property-registration/approval-icon.png" alt="Approval of Registry
                        by Sub-Registrar" />
                                    <div class="title-desc">
                                        <h5>STEP 05</h5>
                                        <p>
                                            Approval of Registry
                                            by Sub-Registrar
                                        </p>
                                    </div>
                                </div>
                            </li>


                        </ul>
                    </div>
                </div>
            </div>



        </div>

        <div class="hd-holder">
            <h6>Cadastral Map</h6>
            <span class="bd-line"></span>
        </div>
        <p class="des-text">
            This process requires <span class="green2">7 days to complete</span>
            <span class="pull-right text2">* Cadastral Map Fee = Rs 50/- Per Land Parcel</span>
        </p>
        <div id="cadastral-map" class="mb30">
            <div class="card">
                <span class="step-count">1</span>
                <div class="card-header">
                    <div class="mb-0">
                        <div class="btn btn-link">
                            <h5>Write Application</h5>
                            <p>Written applicaiton to concerned revene office</p>
                            <div class="row">
                                <ul class="step-detail col-md-10">
                                    <li>
                                        <p>Time Require: 1 Days</p>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


            <div class="card">
                <span class="step-count">2</span>
                <div class="card-header">
                    <div class="mb-0">
                        <div class="btn btn-link">
                            <h5>Visit</h5>
                            <p>Field visit by revenue office</p>
                            <div class="row">
                                <ul class="step-detail col-md-10">
                                    <li>
                                        <p>Time Require: 1 Day</p>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <span class="step-count">3</span>
                <div class="card-header">
                    <div class="mb-0">
                        <div class="btn btn-link">
                            <h5>Preparation</h5>
                            <p>Preparation of copy of cadastral map</p>
                            <div class="row">
                                <ul class="step-detail col-md-10">
                                    <li>
                                        <p>Time Require: 5 Days</p>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="bottom-text">
            <ul>
                <li>
                    <p>* Charges as per mutual agreement between Customer and Deed Writer or Lawyer.</p>
                </li>
                <li>
                    <p>* <span class="green"> Fee Notification</span> And <span class="green">Mutation Fee</span></p>
                </li>
                <li>
                    <p>* <span class="green">Notification of Days</span></p>
                </li>
            </ul>
        </div>
    </div>
</div>