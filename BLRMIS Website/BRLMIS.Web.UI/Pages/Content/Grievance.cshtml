@page "/Grievance"
@{
    ViewData["Title"] = "Grievance";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div id="main">
    <div class="banner-home about-page">
        <div class="banner about-banner">
            <div class="container">
                <div class="banner-detail">
                    <h1 class="heading">
                        Grievance
                    </h1>
                </div>
            </div>
        </div>
    </div>
    <div class="bg-holder">
        <section class="land-record-digitization about-content">
            <div id="contentDescription" class="container ul-list-style ">

            </div>
        </section>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {
            $lib.setPageTitle("Grievance");
            var pageId = 8;
            $lib.http.get('/content/' + pageId, (err, res) => {
                if (err) {
                    return
                }

                else {
                    document.getElementById("contentDescription").innerHTML = res.ContentDescription;
                }

            });
        }())
    </script>
}
