<div class="modal fade" id="delete-confirmation">
    <div class="modal-dialog modal-md modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header text-center">
                <div class="hd-holder  modal-title">
                    <h6 id="delete-confirmation-title">Delete Confirmation</h6>
                    <span class="bd-line"></span>
                </div>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="delete-confirmation-text">
                <p id="delete-confirmation-subtitle">
                    Are you sure you want to remove this file? This action cannot be undone.
                </p>
                <div class="sub-btns text-left">
                    <button id="confirm-modal-btn-delete" type="button" class="customBtn btn-danger" @*data-dismiss="modal"*@>Yes</button>
                    @*<a id="confirm-modal-btn-delete" href="javascript:" class="btn btn-danger">Yes</a>*@
                    <button id="confirm-modal-btn-close" type="button" class="customBtn greyBtn" data-dismiss="modal">No</button>

                </div>
            </div>
        </div>
    </div>
</div>